  },
  "homepage": "https://github.com/CityOfZion/neo-js#readme",
  "devDependencies": {
    "@types/events": "^1.2.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "ts-loader": "^4.4.2",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
